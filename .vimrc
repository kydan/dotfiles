syntax enable
set background=dark
set nu
set ruler
set cursorline
set ignorecase
set smartcase
set hlsearch
set incsearch
set showmatch
set lbr
set tw=500
set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines
set ts=2
set sw=2
set expandtab
set nocompatible
filetype plugin indent on

#disable arrow keys for improved vim foo
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
